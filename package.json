{
  "name": "brilliant-ar-studio",
  "displayName": "Brilliant AR Studio",
  "description": "Develop AR applications for Monocle within the Brilliant AR Studio.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "deviceFiles",
          "name": "Monocle Files",
          "icon": "media/bulb.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "brilliant-ar-studio.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "deviceFiles.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
    },
    {
      "command": "deviceFiles.addFile",
      "title": "Edit",
      "icon": "$(new-file)"
  },
    {
      "command": "deviceFiles.editEntry",
      "title": "Edit",
      "icon": {
        "light": "media/bulb.svg",
        "dark": "media/bulb.svg"
      }
    },
      {
        "command": "brilliant-ar-studio.connect",
        "title": "Connect"
      },
        {
          "command": "memfs.workspaceInit",
          "title": "Setup Workspace",
          "category": "MemFS"
        },
        {
          "command": "memfs.init",
          "title": "Create Files",
          "category": "MemFS"
        },
        {
          "command": "memfs.reset",
          "title": "Delete Files",
          "category": "MemFS"
        },
        {
          "command": "memfs.deleteFile",
          "title": "Delete \"file.txt\"",
          "category": "MemFS"
        },
        {
          "command": "memfs.addFile",
          "title": "Add \"file.txt\"",
          "category": "MemFS"
        }
    ],
    "menus": {
      "commandPalette": [
				{
					"command": "memfs.init",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.addFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.workspaceInit",
					"when": "workbenchState != workspace"
				}],
      "view/title": [
          {
              "command": "deviceFiles.refreshEntry",
              "when": "view == deviceFiles",
              "group": "navigation"
          },
          {
            "command": "deviceFiles.addFile",
            "when": "view == deviceFiles",
            "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "deviceFiles.editEntry",
          "when": "view == deviceFiles && viewItem == dependency",
          "group": "inline"
        }
      ]
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "noble-winrt": "^0.1.1"
  }
}
