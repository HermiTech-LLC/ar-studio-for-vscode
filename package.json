{
  "name": "brilliant-ar-studio",
  "displayName": "Brilliant AR Studio",
  "description": "Develop AR applications for Monocle within the Brilliant AR Studio.",
  "repository": {
    "url": "https://github.com/brilliantlabsAR/ar-studio-for-vscode"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "brilliantsar",
          "title": "Brilliant AR",
          "icon": "media/bulb.svg"
        }
      ]
    },
    "views": {
      "brilliantsar": [
        {
          "id": "snippetTemplates",
          "name": "Code templates",
          "icon": "media/bulb.svg"
        },
        {
          "id": "fpga",
          "name": "FPGA",
          "icon": "media/bulb.svg",
          "when": "monocle.deviceConnected"
        },
        {
          "id": "projects",
          "name": "Community projects",
          "icon": "media/bulb.svg"
        }
       
      ],
      "explorer": [
        {
          "id": "fileExplorer",
          "name": "Device Files",
          "icon": "media/bulb.svg",
          "when": "monocle.deviceConnected"
        }
      ]
    },
    "commands": [
      {
        "command": "brilliant-ar-studio.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "brilliant-ar-studio.openDeviceFile",
        "title": "Open Device file in editor"
      },
      {
        "command": "fileExplorer.openFile",
        "title": "openFile"
      },
      {
        "command": "brilliant-ar-studio.connect",
        "title": "Connect"
      },
      {
        "command": "brilliant-ar-studio.runFile",
        "title": "Run in Device",
        "icon": "$(play-circle)"
      },
      {
        "command": "brilliant-ar-studio.refreshDeviceFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "brilliant-ar-studio.syncFiles",
        "title": "Start auto run",
        "icon": "$(play-circle)"
      },
      {
        "command": "brilliant-ar-studio.deleteDeviceFile",
        "title": "Delete file from device",
        "icon": "$(trash)"
      },
      {
        "command": "brilliant-ar-studio.syncStop",
        "title": "Stop auto run",
        "icon": "$(debug-stop)"
      },
      {
        "command": "brilliant-ar-studio.fpgaUpdate",
        "title": "FPGA Update",
        "icon": "$(cloud)"
      },
      {
        "command": "brilliant-ar-studio.getPublicApps",
        "title": "Get public apps",
        "icon": "$(refresh)"
      },
      {
        "command": "brilliant-ar-studio.publishMonocleApp",
        "title": "Publish app",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "brilliant-ar-studio.UnPublishMonocleApp",
        "title": "Unpublish app",
        "icon": "$(star-full)"
      },
      {
        "command": "brilliant-ar-studio.forkProject",
        "title": "Fork to Edit",
        "icon": "$(repo-forked)"
      },
      {
        "command": "brilliant-ar-studio.copyProject",
        "title": "Copy To Local",
        "icon": "$(explorer-view-icon)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "brilliant-ar-studio.refreshDeviceFiles",
          "when": "view == fileExplorer && !monocle.sync",
          "group": "navigation@0"
        },
       
        {
          "command": "brilliant-ar-studio.publishMonocleApp",
          "when": "view == projects && workspaceFolderCount !=0 && !monocle.published",
          "group": "navigation@3"
        },
        {
          "command": "brilliant-ar-studio.UnPublishMonocleApp",
          "when": "view == projects && workspaceFolderCount !=0 && monocle.published==true",
          "group": "navigation@3"
        },
        {
          "command": "brilliant-ar-studio.getPublicApps",
          "when": "view == projects",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "brilliant-ar-studio.copyProject",
          "when": "view == projects",
          "group": "inline"
        },
        {
          "command": "brilliant-ar-studio.forkProject",
          "when": "view == projects",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == python && monocle.deviceConnected && !monocle.sync",
          "command": "brilliant-ar-studio.syncFiles",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == python && monocle.deviceConnected && monocle.sync",
          "command": "brilliant-ar-studio.syncStop",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/display.json"
      },
      {
        "language": "python",
        "path": "./snippets/loops.json"
      },
      {
        "language": "python",
        "path": "./snippets/camera.json"
      },
      {
        "language": "python",
        "path": "./snippets/logic.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-20",
    "@octokit/request": "^6.2.3",
    "jszip": "^3.10.1",
    "noble-winrt": "^0.1.1"
  }
}
