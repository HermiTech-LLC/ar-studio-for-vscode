{
  "name": "brilliant-ar-studio",
  "displayName": "Brilliant AR Studio",
  "description": "Develop AR applications for Monocle within the Brilliant AR Studio.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "brilliantsar",
          "title": "Brilliant AR",
          "icon": "media/bulb.svg"
        }
      ]
    },
    "views": {
      "brilliantsar": [
        {
          "id": "snippetTemplates",
          "name": "Templates",
          "icon": "media/bulb.svg"
        },
        {
          "id": "projects",
          "name": "Projects",
          "icon": "media/bulb.svg",
        }
      ],
      "explorer": [
        {
          "id": "fileExplorer",
          "name": "Device Files",
          "icon": "media/bulb.svg",
          "when": "monocle.deviceConnected"
          
        }
      ]
    },
    "commands": [
      {
        "command": "brilliant-ar-studio.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "fileExplorer.openFile",
        "title": "openFile"
      },
      {
        "command": "brilliant-ar-studio.connect",
        "title": "Connect"
      },
      {
        "command": "memfs.workspaceInit",
        "title": "Setup Workspace",
        "category": "MemFS"
      },
      {
        "command": "memfs.init",
        "title": "Create Files",
        "category": "MemFS"
      },
      {
        "command": "memfs.reset",
        "title": "Delete Files",
        "category": "MemFS"
      },
      {
        "command": "memfs.deleteFile",
        "title": "Delete \"file.txt\"",
        "category": "MemFS"
      },
      {
        "command": "memfs.addFile",
        "title": "Add \"file.txt\"",
        "category": "MemFS"
      },
      {
        "command": "brilliant-ar-studio.runFile",
        "title": "Run in Device",
        "icon": "$(play-circle)"
      },
      {
        "command": "brilliant-ar-studio.refreshDeviceFiles",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "brilliant-ar-studio.syncFiles",
        "title": "Start Developer Mode (continuous file sync)",
        "icon": "$(code)"
      },
      {
        "command": "brilliant-ar-studio.deleteDeviceFile",
        "title": "Delete file from device",
        "icon": "$(trash)"
      },
      {
        "command": "brilliant-ar-studio.syncStop",
        "title": "Stop Developer Mode",
        "icon": "$(stop)"
      },
      {
        "command": "brilliant-ar-studio.fpgaUpdate",
        "title": "FPGA Update",
        "icon": "$(cloud)"
      },
      {
        "command": "brilliant-ar-studio.getPublicApps",
        "title": "Get public apps",
        "icon": "$(refresh)"
      },
      {
        "command": "brilliant-ar-studio.publishMonocleApp",
        "title": "Publish app",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "brilliant-ar-studio.UnPublishMonocleApp",
        "title": "Unpublish app",
        "icon": "$(star-full)"
      },
      {
        "command": "brilliant-ar-studio.forkProject",
        "title": "Fork to Edit",
        "icon": "$(repo-forked)"
      }
    ],
    "menus": {
      "view/title": [
				
        {
					"command": "brilliant-ar-studio.refreshDeviceFiles",
					"when": "view == fileExplorer",
					"group": "navigation@0"
				},
        {
					"command": "brilliant-ar-studio.syncFiles",
					"when": "view == fileExplorer && !monocle.sync",
					"group": "navigation@1"
				},
        {
					"command": "brilliant-ar-studio.syncStop",
					"when": "view == fileExplorer && monocle.sync",
					"group": "navigation@1"
				},
        {
					"command": "brilliant-ar-studio.fpgaUpdate",
					"when": "view == fileExplorer",
					"group": "navigation@2"
				},
        {
					"command": "brilliant-ar-studio.publishMonocleApp",
					"when": "view == fileExplorer && workspaceFolderCount !=0 && !monocle.published",
					"group": "navigation@3"
				},
        {
					"command": "brilliant-ar-studio.UnPublishMonocleApp",
					"when": "view == fileExplorer && workspaceFolderCount !=0 && monocle.published==true",
					"group": "navigation@3"
				},
        {
					"command": "brilliant-ar-studio.getPublicApps",
					"when": "view == projects",
					"group": "navigation@0"
				}
      ],
      "view/item/context": [
        {
					"command": "brilliant-ar-studio.deleteDeviceFile",
					"when": "view == fileExplorer",
					"group": "inline"
				},
        {
					"command": "brilliant-ar-studio.forkProject",
					"when": "view == projects",
					"group": "inline"
				}
      ],
      "editor/title": [
        {
          "when": "resourceLangId == python && monocle.deviceConnected",
          "command": "brilliant-ar-studio.runFile",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/display.json"
      },
      {
        "language": "python",
        "path": "./snippets/loops.json"
      },
      {
        "language": "python",
        "path": "./snippets/camera.json"
      },
      {
        "language": "python",
        "path": "./snippets/logic.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@octokit/request": "^6.2.3",
    "jszip": "^3.10.1",
    "noble-winrt": "^0.1.1"
  }
}
